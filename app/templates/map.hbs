<div class="map-location-overlay">
  <h1><i class="fa fa-circle-o-notch fa-spin"></i><br /><br />Finding your location...</h1>
</div>

<div class="map-wrapper">
  <div class="map-left">
    <div class="map-results">
      {{#each model as |event|}}
        {{#link-to "event" event.id}}
          <div class="map-results-item">
            {{#slick-slider variableWidth=true autoplay=true autoplaySpeed=1200}}
              {{#each event.imagesArray as |image|}}
              <div class="map-results-item-image"><img src={{image}} /></div>
              {{/each}}
            {{/slick-slider}}

            <h2>{{event.title}}</h2>
            <h3><i class="fa fa-user"></i> {{event.host.name}}</h3>
          </div>
        {{/link-to}}
      {{/each}}
    </div>

    {{#link-to "create" tagName="button" class="btn create-button"}}Create Event{{/link-to}}
  </div>
  <div class="map-right">
    {{#g-map lat=userLat lng=userLng zoom=12 as |context|}}
      {{#each model as |event|}}
        {{g-map-marker context lat=event.lat lng=event.lng}}
      {{/each}}
    {{/g-map}}
  </div>
</div>
